      <div class="form__row">
        <div class="form__group">
          <label class="form__label" for="dist-nombre">Nombre y apellidos *</label>
          <input class="form__input" type="text" id="dist-nombre" name="nombre" required>
        </div>
        <div class="form__group">
          <label class="form__label" for="dist-optica">Nombre de la óptica *</label>
          <input class="form__input" type="text" id="dist-optica" name="optica" required>
        </div>
      </div>
      <div class="form__row">
        <div class="form__group">
          <label class="form__label" for="dist-email">Email *</label>
          <input class="form__input" type="email" id="dist-email" name="email" required>
        </div>
        <div class="form__group">
          <label class="form__label" for="dist-telefono">Teléfono</label>
          <input class="form__input" type="tel" id="dist-telefono" name="telefono">
        </div>
      </div>
      <div class="form__group">
        <label class="form__label" for="dist-provincia">Provincia *</label>
        <input class="form__input" type="text" id="dist-provincia" name="provincia" required>
      </div>
      <div class="form__group">
        <label class="form__label" for="dist-mensaje">Mensaje (opcional)</label>
        <textarea class="form__textarea" id="dist-mensaje" name="mensaje" rows="4"></textarea>
      </div>
      <div class="form__checkbox-group">
        <input type="checkbox" class="form__checkbox" id="dist-privacy" required>
        <label class="form__checkbox-label" for="dist-privacy">
          He leído y acepto la <a href="/privacidad/">Política de Privacidad</a>
        </label>
      </div>
      <button type="submit" class="btn btn--primary btn--large form__submit">Enviar solicitud</button>
    </form>
  </div>
</section>

<script>
  (function () {
    var headers = document.querySelectorAll('.region-accordion__header');
    headers.forEach(function (btn) {
      btn.addEventListener('click', function () {
        var item = btn.closest('.region-accordion__item');
        var isOpen = item.classList.contains('is-open');
        headers.forEach(function (h) {
          h.closest('.region-accordion__item').classList.remove('is-open');
          h.setAttribute('aria-expanded', 'false');
        });
        if (!isOpen) {
          item.classList.add('is-open');
          btn.setAttribute('aria-expanded', 'true');
        }
      });
    });
  })();
</script>
