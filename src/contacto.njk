        <form class="form" name="contacto" method="POST" data-netlify="true">
          <input type="hidden" name="form-name" value="contacto">

          <div class="form__row">
            <div class="form__group">
              <label class="form__label" for="nombre">Nombre *</label>
              <input class="form__input" type="text" id="nombre" name="nombre" required placeholder="Tu nombre">
            </div>
            <div class="form__group">
              <label class="form__label" for="apellidos">Apellidos *</label>
              <input class="form__input" type="text" id="apellidos" name="apellidos" required placeholder="Tus apellidos">
            </div>
          </div>

          <div class="form__group">
            <label class="form__label" for="email">Email *</label>
            <input class="form__input" type="email" id="email" name="email" required placeholder="tu@email.com">
          </div>

          <div class="form__group">
            <label class="form__label" for="asunto">Asunto *</label>
            <select class="form__select" id="asunto" name="asunto" required>
              <option value="">Selecciona un asunto</option>
              <option value="producto">Consulta sobre productos</option>
              <option value="distribucion">Información sobre distribución</option>
              <option value="garantia">Garantía / reclamación</option>
              <option value="prensa">Prensa / colaboración</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div class="form__group">
            <label class="form__label" for="mensaje">Mensaje *</label>
            <textarea class="form__textarea" id="mensaje" name="mensaje" required placeholder="Cuéntanos en qué podemos ayudarte..."></textarea>
          </div>

          <div class="form__checkbox-group">
            <input type="checkbox" class="form__checkbox" id="privacy" required>
            <label class="form__checkbox-label" for="privacy">
              He leído y acepto la <a href="/privacidad/">Política de Privacidad</a> y consiento el tratamiento de mis datos para gestionar esta consulta.
            </label>
          </div>

          <button type="submit" class="btn btn--primary btn--large form__submit">Enviar mensaje</button>
        </form>
      </div>

    </div>
